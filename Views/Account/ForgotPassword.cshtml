
@{
}
<div class="row rounded border p-4 ForgotPassword col-md-4 mx-auto" style="background-color:#146363;">
        <h2 class="text-center mb-3 text-light">Forgot Password</h2>
        <hr style="background-color:white;"/>

        @if(ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label" style="font-weight:600;color:white;">Email</label>
                <input class="form-control" name="email" value="@ViewBag.Email">
                <span class="text-danger">@ViewBag.EmailError</span>
            </div>

            <div class="row mb-3">
                <div class="col d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                </div>
            </div>
        </form>
</div>