@model RegisterDto
@{
}

<div class="row Register">
    <div class="col-lg-6 mx-auto rounded border p-4" style="background-color:#146363;">
        <h2 class="text-center mb-3" style="color:white;">Register</h2>
        <hr style="color:white;"/>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">First Name*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Last Name*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Email*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" id="Email" onblur="verifyEmail()">
                    <span asp-validation-for="Email" class="text-danger"  id="ValidateEmail"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Phone</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Password*</label>
                <div class="col-sm-8">
                        <input type="password" id="rpw" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight:600;color:white;">Confirm Password*</label>
                <div class="col-sm-8">
                        <input type="password" id="crpw" class="form-control" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid btn-Register">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
