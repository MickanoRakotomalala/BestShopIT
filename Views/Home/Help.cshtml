}

<div class="row mt-md-3">
    <div class="col-md-5 mx-auto rounded-3 border p-4 text-white" style="background-color:#146363;">
    <h2>Contact</h2>
    <hr/>
        <form method="post">
            <div class="mb-4">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your Name"/>
            </div>
            <div class="mb-4">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Enter your Email Address" />
            </div>
            <div class="mb-4">
                <label class="form-label">Object</label>
                <input type="text" name="Object" class="form-control" placeholder="Object"/>
            </div>
            <div class="mb-4">
                <label class="form-label">Message</label>
                <textarea name="Message" class="form-control" placeholder="Enter your Message"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>


